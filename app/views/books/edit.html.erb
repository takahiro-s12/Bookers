<h2>Editing Book</h2>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <% if @book.errors.any? %>
    <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Body</h5>
  <%= f.text_area :body %>
  <p></p>
  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path(@book) %> | <%= link_to "Back", "/books" %>
